{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "incremental": true,
    "declaration": true,
    "jsx": "preserve",
    "typeRoots": [
      "./types/*",
      "./node_modules/@types"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "types",
    "src"
  ],
  "exclude": [
    "node_modules",
    "__testfixtures__"
  ]
}
